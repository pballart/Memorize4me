<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.best.memorize4me.Create_new_item">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id = "@+id/relLayout">
            <TextView
                android:id="@+id/categoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Title"
                android:textSize="26sp"
                android:textColor="@color/salmonaken"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />
            <TextView
                android:id="@+id/categoryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:inputType="date"
                android:textSize="20sp"
                android:paddingTop="5dp"
                android:textColor="@color/salmonaken"
                android:textStyle="bold"
                android:text="Date"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/relLayout">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableView">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="14dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Title"
                        android:id="@+id/itemTitle" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="match_parent"
                        android:text=""
                        android:layout_height="wrap_content"
                        android:id="@+id/editTitle"
                        android:layout_weight="1"
                        android:layout_marginTop="-4dp"
                        android:singleLine="false"
                        android:imeOptions="actionNext" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Description"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:id="@+id/itemDescriptiontitle" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editDescription"
                        android:layout_weight="1"
                        android:text=""
                        android:singleLine="false"
                        android:layout_column="0"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Price"
                        android:singleLine="true"
                        android:id="@+id/itemPrice" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="-4dp"
                        android:id="@+id/editPrice"
                        android:layout_column="0"
                        android:singleLine="false"
                        android:ems="10"
                        android:inputType="numberDecimal" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Contact:"
                        android:id="@+id/itemContact" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/editContact"
                        android:layout_marginTop="-4dp"
                        android:singleLine="false"
                        android:text=""
                        android:layout_column="0"
                        android:ems="10"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Tel:"
                        android:id="@+id/itemTel" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/editTel"
                        android:layout_marginTop="-4dp"
                        android:layout_column="0"
                        android:text=""
                        android:singleLine="false"
                        android:ems="10"
                        android:inputType="phone"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Email:"
                        android:id="@+id/itemMail" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:id="@+id/editMail"
                        android:layout_marginTop="-4dp"
                        android:singleLine="false"
                        android:ems="10"
                        android:layout_column="0"
                        android:inputType="textEmailAddress"/>
                </TableRow>


            </TableLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:gravity="left"
                        android:id = "@+id/imageTitle"
                        android:text = "Image:"/>
                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageView2"
                        android:layout_below="@+id/imageTitle"
                        android:layout_gravity="right"
                        android:background="@drawable/add_category_button"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/imageView2"
                        android:id="@+id/ratingBar"
                        android:numStars="5"
                        />
                    android:layout_centerHorizontal="true" />
                </RelativeLayout>


        </LinearLayout>
    </ScrollView>




</RelativeLayout>
